@model dynamic
@{
    var prefix = Model?.Prefix ?? "";
    var color = Model?.Color ?? "primary";
}
<div id="@(prefix)DateRangeSection" class="bsp-chart-date-range-section">
    <div class="row mb-2">
        <div class="col-md-12">
            <div class="d-flex align-items-center">
                <span class="text-muted small me-2">Диапазон дат:</span>
                <span id="@(prefix)DateRangeLabel" class="small fw-bold text-@color"></span>
            </div>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-md-12">
            <div id="@(prefix)SliderContainer">
                <div id="@(prefix)DateRangeSlider" class="bsp-chart-normal-slider"></div>
                <div class="d-flex justify-content-between mt-1">
                    <span id="@(prefix)MinDateLabel" class="small text-muted"></span>
                    <span id="@(prefix)MaxDateLabel" class="small text-muted"></span>
                </div>
            </div>
        </div>
    </div>
</div>