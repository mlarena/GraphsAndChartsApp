﻿﻿<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GraphsAndChartsApp</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/charts.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GraphsAndChartsApp.styles.css" asp-append-version="true" />
    <!-- Font Awesome для иконок -->
    <link rel="stylesheet" href="~/css/all.min.css"> 
        <!-- noUiSlider CSS -->
    <link rel="stylesheet" href="~/css/nouislider.min.css">
</head>
<body>
   
        <main role="main">
            @RenderBody()
        </main>
   
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2026 - КОМПЛЕКСЫ МОНИТОРИНГА
        </div>
    </footer>
    
    <!-- Базовые скрипты -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Chart.js и зависимости -->
    <script src="~/lib_chart/chart.js"></script>
    <script src="~/lib_chart/chartjs-adapter-date-fns.bundle.min.js"></script>
    <script src="~/lib_chart/moment.min.js"></script>
    <script src="~/lib_chart/moment.ru.min.js"></script>
    
    <!-- noUiSlider (ВАЖНО: должен быть загружен до dov-charts.js) -->
    <script src="~/lib_chart/nouislider.min.js"></script>
    <script src="~/lib_chart/wNumb.min.js"></script>
    
    <!-- Пользовательские скрипты -->
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/dov-charts.js" asp-append-version="true"></script>
    <script src="~/js/dspd-charts.js" asp-append-version="true"></script>
    <script src="~/js/dust-charts.js" asp-append-version="true"></script>
    <script src="~/js/iws-charts.js" asp-append-version="true"></script>
    <script src="~/js/mueks-charts.js" asp-append-version="true"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>