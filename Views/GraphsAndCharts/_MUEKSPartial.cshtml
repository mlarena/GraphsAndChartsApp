@model GraphsAndChartsApp.ViewModels.SensorViewModel

@{
    var sensorId = Model.Id;
}

<div class="card bsp-chart-sensor-card" id="mueksContainer" data-sensor-id="@sensorId">
    <div class="card-header bg-danger text-white">
        <div class="d-flex justify-content-between align-items-center">
            <h5 class="mb-0">
                <i class="fas fa-bolt"></i> Модуль управления электроснабжением (MUEKS)
            </h5>
            <span class="badge bg-light text-dark">
                <i class="fas fa-barcode"></i> @Model.SerialNumber
            </span>
        </div>
    </div>

    <div class="card-body">
        <!-- Информация о сенсоре -->
        <div class="row mb-3">
            <div class="col-md-12">
                <div class="d-flex justify-content-between align-items-center bg-light p-2 rounded">
                    <div><i class="fas fa-map-marker-alt text-danger"></i> <span class="fw-bold">@Model.EndPointsName</span></div>
                    <div><i class="fas fa-building text-danger"></i> <span>@Model.MonitoringPostName</span></div>
                    <div><i class="fas fa-clock text-danger"></i> <span id="mueksLastUpdateTime">Загрузка...</span></div>
                    <div class="d-flex align-items-center ms-3 bsp-chart-auto-update-control" id="mueksAutoUpdateControl">
                        <div class="form-check form-switch d-inline-block m-0">
                            <input class="form-check-input bsp-chart-form-check-input" type="checkbox" id="mueksAutoUpdateToggle" role="switch" checked>
                            <label class="form-check-label small fw-normal ms-1" for="mueksAutoUpdateToggle">
                                <i class="fas fa-sync-alt fa-xs"></i> 30с
                            </label>
                        </div>
                        <span id="mueksCountdownTimer" class="badge bg-secondary ms-2 bsp-chart-countdown-timer">30</span>
                    </div>
                </div>
            </div>
        </div>
 <!-- Выбор периода + тип графика -->
        <div class="row mb-3">
            <div class="col-md-12">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center">
                        @await Html.PartialAsync("_TimeRangePartial", new { Prefix = "mueks", OutlineColor = "danger", ActiveDays = 7 })
                    </div>
                    <div class="d-flex align-items-center">
                        <span class="text-muted me-2">Тип графика:</span>
                        <select id="mueksChartTypeSelect" class="form-select form-select-sm" style="width: auto;">
                            <option value="line" selected>Линейный</option>
                            <option value="scatter">Точечный</option>
                            <option value="bar">Столбчатый</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>

        <!-- Вкладки -->
        <div class="row mb-3">
            <div class="col-md-12">
                <ul class="nav nav-tabs bsp-chart-nav-tabs" id="mueksTabs" role="tablist">
                    <li class="nav-item" role="presentation"><button class="nav-link bsp-chart-nav-link active bsp-chart-mueks-tab" id="voltage-tab" data-bs-toggle="tab" data-bs-target="#voltage" type="button" role="tab"><i class="fas fa-bolt"></i> Напряжение</button></li>
                    <li class="nav-item" role="presentation"><button class="nav-link bsp-chart-nav-link bsp-chart-mueks-tab" id="current-tab" data-bs-toggle="tab" data-bs-target="#current" type="button" role="tab"><i class="fas fa-wave-square"></i> Токи</button></li>
                    <li class="nav-item" role="presentation"><button class="nav-link bsp-chart-nav-link bsp-chart-mueks-tab" id="energy-tab" data-bs-toggle="tab" data-bs-target="#energy" type="button" role="tab"><i class="fas fa-battery-three-quarters"></i> Энергия</button></li>
                    <li class="nav-item" role="presentation"><button class="nav-link bsp-chart-nav-link bsp-chart-mueks-tab" id="status-tab" data-bs-toggle="tab" data-bs-target="#status" type="button" role="tab"><i class="fas fa-info-circle"></i> Статусы</button></li>
                    <li class="nav-item" role="presentation"><button class="nav-link bsp-chart-nav-link bsp-chart-mueks-tab" id="tds-tab" data-bs-toggle="tab" data-bs-target="#tds" type="button" role="tab"><i class="fas fa-microchip"></i> TDS параметры</button></li>
                </ul>
            </div>
        </div>

       
        <!-- Параметры по вкладкам -->
        <div class="row mb-3">
            <div class="col-md-12">
                <div class="tab-content" id="mueksTabsContent">
                    <div class="tab-pane fade show active" id="voltage"><div class="card"><div class="card-header bg-light py-2"><h6 class="mb-0">Параметры напряжения (В)</h6></div><div class="card-body py-2"><div class="row" id="mueksVoltageCheckboxes"></div></div></div></div>
                    <div class="tab-pane fade" id="current"><div class="card"><div class="card-header bg-light py-2"><h6 class="mb-0">Параметры тока (А)</h6></div><div class="card-body py-2"><div class="row" id="mueksCurrentCheckboxes"></div></div></div></div>
                    <div class="tab-pane fade" id="energy"><div class="card"><div class="card-header bg-light py-2"><h6 class="mb-0">Параметры энергии</h6></div><div class="card-body py-2"><div class="row" id="mueksEnergyCheckboxes"></div></div></div></div>
                    <div class="tab-pane fade" id="status"><div class="card"><div class="card-header bg-light py-2"><h6 class="mb-0">Статусы и температура</h6></div><div class="card-body py-2"><div class="row" id="mueksStatusCheckboxes"></div></div></div></div>
                    <div class="tab-pane fade" id="tds"><div class="card"><div class="card-header bg-light py-2"><h6 class="mb-0">TDS параметры (текстовые)</h6></div><div class="card-body py-2"><div class="alert alert-info"><i class="fas fa-info-circle"></i> Текстовые параметры TDS отображаются в таблице ниже</div><div id="mueksTdsTable" class="table-responsive bsp-chart-mueks-tds-table"></div></div></div></div>
                </div>
            </div>
        </div>

        <!-- Диапазон дат -->
        @await Html.PartialAsync("_DateRangeSectionPartial", new { Prefix = "mueks", Color = "danger" })

        <!-- График -->
        <div id="mueksChartsContainer">
            <div class="card">
                <div class="card-header bg-light py-2 d-flex justify-content-between align-items-center">
                    <h6 class="mb-0"><i class="fas fa-chart-mixed text-danger"></i> <span id="mueksChartTitle">Параметры напряжения</span></h6>
                    <div class="d-flex align-items-center">
                        <span class="text-muted small me-2">Шкала:</span>
                        <span id="mueksTimeScaleLabel" class="badge bg-secondary">авто</span>
                    </div>
                </div>
                <div class="card-body p-2">
                    <canvas id="mueksChart" class="bsp-chart-canvas" style="height: 500px; width: 100%;"></canvas>
                </div>
            </div>
        </div>

        <!-- Статистика -->
        <div class="row mt-3">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header bg-light py-2">
                        <h6 class="mb-0"><i class="fas fa-info-circle text-danger"></i> Статистика</h6>
                    </div>
                    <div class="card-body py-2">
                        <div class="row" id="mueksStatisticsContainer"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="mueksChartLoadingIndicator" class="text-center my-2 bsp-chart-loading-indicator" style="display: none;">
    <div class="spinner-border spinner-border-sm text-danger" role="status"><span class="visually-hidden">Загрузка...</span></div>
    <span class="ms-2 text-muted small">Загрузка данных MUEKS...</span>
</div>

<script>
    $(document).ready(function() {
        if (typeof MUEKSCharts !== 'undefined') {
            if (MUEKSCharts.cleanup) MUEKSCharts.cleanup();
            MUEKSCharts.init(@sensorId);
            $(document).trigger('sensorChanged');
        } else {
            console.error('MUEKSCharts не загружен!');
        }
    });
</script>